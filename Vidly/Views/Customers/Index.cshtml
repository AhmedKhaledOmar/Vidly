@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())
{
    <h2>No Customer now</h2>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Customer
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var customer in Model)
                {
                    <td>
                        @Html.ActionLink(customer.Name, "Details", new { customer.Id })
                    </td>
                }
            </tr>
        </tbody>
    </table>

}