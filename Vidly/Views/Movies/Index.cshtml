@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())
{
    <h2>No Moive now</h2>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var moive in Model)
                {
                    <td>
                        @(moive.Name)
                    </td>
                }
            </tr>
        </tbody>
    </table>

}