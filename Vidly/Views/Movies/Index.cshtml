@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())
{
    <h2>No Moive now</h2>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>          
                @foreach (var movie in Model)
                {
                   <tr>
                       <td>@Html.ActionLink(movie.Name, "Details" , new  { movie.Id })</td>
                       <td>@movie.Genre.Name</td>
                   </tr>
                }        
        </tbody>
    </table>

}